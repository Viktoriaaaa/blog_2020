<h1><%= @user.login %></h1>
<h3 class="text-muted"><%= @user.name %></h3>
<% if @user.avatar.attached? %>
<%= image_tag @user.avatar.variant(resize_to_limit: [300, 300]), alt: post.user.login%>
<% end %>

<% if @user.edit_by?(@current_user) %>
<div class="mb-4">
<%= link_to t('users.edit.btn'), edit_user_path(@user), class: 'btn btn-primary' %>
<%= link_to t('users.destroy.btn'), @user, class: 'btn btn-danger', data: {method: :delete, confirm: t('helpers.sure')} %>
</div>
<% end %>
<%= render @posts %>
<%= paginate @posts %>
